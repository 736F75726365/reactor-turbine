{
	"id": "adobetarget",	
	"name": "Adobe Target",
	"dependencies": [
		"adobeanalytics" // Not sure what identifiers will look like.
	],
	"install": {
		"eventDelegates": [
			{
				"swipe": "swipe.js"
			}
		],
		"rules": [{
			"name": "Custom Rule",
			"event": {
				"type": "click",
				"settings": {
					"selector": ".mytriggerdiv"
				}
			},
			"conditionDelegates": [
				{
					"type": "param",
					"settings": {
						"name": "myParam",
						"value": "myValue"
					}
				},
				{
					"type": "custom",
					"settings": {
						"script": "custom-rule-condition.js"
					}
				}
			],
			"actions": [
				{
					"extensionId": "adobeanalytics",
					"settings": {
						"track": "pageview",
						"evar20": "MyEvar10"
					}
				},
				{
					"extensionId": "adobetarget",
					"settings": {
						"offerName": "myOffer",
						"selector": ".myOfferContainer"
					}
				}
			]
		}]
	},
	"toolConfig": "target-config.html",
	"ruleActionConfig": "offer-config.html",
	"ruleAction": "load-offers.js"
}
